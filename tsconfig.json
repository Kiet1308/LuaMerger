{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "rootDir": "src",
    "outDir": "out",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vscode",
      "mocha"
    ],
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}